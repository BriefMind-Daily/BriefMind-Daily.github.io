/* 美化按钮样式 */
.action-btn {
    padding: 12px 28px;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border-radius: 30px;
    letter-spacing: 0.5px;
    position: relative;
    overflow: hidden;
    z-index: 1;
}

.action-btn:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 100%;
    background: rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
    z-index: -1;
}

.action-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 7px 14px rgba(0, 0, 0, 0.15);
}

.action-btn:hover:before {
    width: 100%;
}

.btn-primary.action-btn {
    background: linear-gradient(45deg, #0a2d6e, #1e50a2);
    border: none;
}

.btn-primary.action-btn:hover {
    background: linear-gradient(45deg, #083277, #2460c1);
}

.btn-outline-primary.action-btn {
    border: 2px solid #0a2d6e;
    color: #0a2d6e;
    background: transparent;
}

.btn-outline-primary.action-btn:hover {
    color: #fff;
    background: linear-gradient(45deg, #0a2d6e, #1e50a2);
    border: 2px solid transparent;
}

.hero-content .mt-5 {
    margin-top: 2.5rem !important;
}

/* 右侧按钮布局 */
.hero-buttons {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    padding-top: 20px;
}

/* 移动端响应式设计 */
@media (max-width: 992px) {
    .hero-buttons {
        margin-top: 30px;
    }
    
    .hero-section {
        min-height: auto;
        padding: 80px 0 50px;
    }
} 